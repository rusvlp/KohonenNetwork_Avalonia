<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KohonenNetwork.MainWindow"
        Title="KohonenNetwork">
    <!--TextBlock> Koberbek Simple bla-bla-bla </TextBlock-->
    <Grid ShowGridLines="True" ColumnDefinitions="3*, *">
        <!--Definitions-->
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <!--Title-->
        <Grid ColumnDefinitions="1.5*, *, *">
            <TextBlock Grid.Column = "1" Grid.Row = "0">KohonenNetwork</TextBlock>
        </Grid>
        
        <!-- Main grid -->
        <Grid Grid.Row = "1" >
        </Grid>
        
            <!-- Buttons -->
        <Grid Grid.Column = "1" Grid.Row = "2" RowDefinitions="Auto, Auto, Auto">
            <Button >Какая-то кнопка</Button>
            <Button Grid.Row = "1" >Какая-то кнопка</Button>
            <Button Grid.Row = "2" >Какая-то кнопка</Button>
            
        </Grid>
    </Grid>
</Window>

